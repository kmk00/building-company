---
import Layout from '../layouts/Layout.astro';
import SecondaryHeader from '../components/SecondaryHeader.astro';
import IntroductionComponent from '../components/IntroductionComponent.astro';
import OurTeamComponent from '../components/AboutUs/OutTeamComponent.astro';
import QuoteComponent from '../components/AboutUs/QuoteComponent.astro';
import PortfolioComponent from '../components/PortfolioComponent.astro';
import VideoComponent from '../components/VideoComponent.astro';

const secondaryHeader = await Astro.glob('../content/about/SecondaryHeader.md');
const introductionContent = await Astro.glob('../content/sharedContent/Introduction.md');
const ourTeamContent = await Astro.glob('../content/about/OurTeam.md');
const quoteContent = await Astro.glob('../content/about/Quote.md');
const portfolioComponent = await Astro.glob('../content/projects/PortfolioElement.md');
const videoComponentContent = await Astro.glob('../content/portfolio/VideoElement.md');




---

<Layout title="About">
	<main>
		<SecondaryHeader title={secondaryHeader[0].frontmatter.title} text={secondaryHeader[0].frontmatter.text} />
		<IntroductionComponent  title={introductionContent[0].frontmatter.title} text={introductionContent[0].frontmatter.text} smallTitle={introductionContent[0].frontmatter.smallTitle} items={introductionContent[0].frontmatter.items}/>
		<OurTeamComponent cards={ourTeamContent[0].frontmatter.teamCards} smallTitle={ourTeamContent[0].frontmatter.smallTitle} title={ourTeamContent[0].frontmatter.title} />
		<QuoteComponent imagePath={quoteContent[0].frontmatter.imagePath} quote={quoteContent[0].frontmatter.quote} cardTitle={quoteContent[0].frontmatter.cardTitle} text={quoteContent[0].frontmatter.text}  />
		<PortfolioComponent smallTitle={portfolioComponent[0].frontmatter.smallTitle} title={portfolioComponent[0].frontmatter.title} text={portfolioComponent[0].frontmatter.text} btnLabel={portfolioComponent[0].frontmatter.btnLabel}  />
		<VideoComponent 
			sourcePath={videoComponentContent[0].frontmatter.sourcePath} 
			title={videoComponentContent[0].frontmatter.title} 
			text={videoComponentContent[0].frontmatter.text} 
			smallTitle={videoComponentContent[0].frontmatter.smallTitle} 
			listElements={videoComponentContent[0].frontmatter.listElements} 
		/>
	</main>
</Layout>