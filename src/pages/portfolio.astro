---
import Layout from '../layouts/Layout.astro';
import SecondaryHeader from '../components/SecondaryHeader.astro';
import VideoComponent from '../components/VideoComponent.astro';
import GalleryComponent from '../components/Portfolio/GalleryComponent.astro';

const secondaryHeader = await Astro.glob('../content/portfolio/SecondaryHeader.md');
const videoComponentContent = await Astro.glob('../content/portfolio/VideoElement.md');
const galleryComponentContent = await Astro.glob('../content/portfolio/GalleryElement.md');
---

<Layout title={secondaryHeader[0].frontmatter.title}>
	<main>
		<SecondaryHeader 
			title={secondaryHeader[0].frontmatter.title} 
			text={secondaryHeader[0].frontmatter.text} 
		/>
		<VideoComponent 
			sourcePath={videoComponentContent[0].frontmatter.sourcePath} 
			title={videoComponentContent[0].frontmatter.title} 
			text={videoComponentContent[0].frontmatter.text} 
			smallTitle={videoComponentContent[0].frontmatter.smallTitle} 
			listElements={videoComponentContent[0].frontmatter.listElements} 
		/>
		<GalleryComponent 
			images={galleryComponentContent[0].frontmatter.images}
		/>
	</main>
</Layout>