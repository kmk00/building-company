---
import NavigationComponent from '../components/Navigation/NavigationComponent.astro';
import Footer from '../components/Footer/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>HOMCO | {title}</title>
	</head>
	<body>
		<NavigationComponent />
		<slot />	
	</body>
	<Footer />
</html>

<style is:global>

*, *::before, *::after{
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html{
	font-family: 'Poppins', sans-serif;
	background-color: rgb(232, 238, 238);
	font-size: 62.5%;
	overflow-x: hidden;
}

main{
	max-width: 1600px;
	margin:auto;
	padding: 2rem;
}

</style>
