---
interface Props {
    label: string;
    action?: () => void;
    href?: string;
}

const { label, action, href } = Astro.props;
---

<button>{label}</button>


<style>
    button{
        background-color: black;
        color: white;
        border: none;
        padding: 1.4rem 2.4rem;
        font-size: 1.4rem;
        font-weight: bold;
        text-transform: uppercase;
        margin-block: 2rem;
    }
</style>