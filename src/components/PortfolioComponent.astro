---
import H2 from './Elements/H2.astro';
import H6 from './Elements/H6.astro';
import TextParagraph from './Elements/TextParagraph.astro';
import Button from './Elements/Button.astro';

import image from '../assets/who-we-are-image.jpg';

interface Props {
    smallTitle: string
    title: string
    text: string
    btnLabel: string
}

const { smallTitle, title, text, btnLabel } = Astro.props
---

<section>
    <!-- Portfolio Component -->
    <div class="text-content">
        <H6>{smallTitle}</H6>
        <H2>{title}</H2>
        <TextParagraph>{text}</TextParagraph>
        <Button 
            label={btnLabel}  
        />
    </div>
    <div class="image-container">
        <img src={image.src} alt="image">
        <img src={image.src} alt="image">
        <img src={image.src} alt="image">
    </div>
</section>

<style>

section{
    padding-right: 4rem;
    display: grid;
    grid-template-columns:  minmax(430px, 1fr) 2fr;
}

.image-container{
    position: relative;
    widows: 100%;
    height: 100%;
}

img{
    width: 200px;
    position: absolute;
    right: 0;
    bottom: 50%;
}

img:nth-child(1){
    transform: translateY(40%);
    z-index: 2;   
}

img:nth-child(2){
    transform: translateY(-20%);
    transform: translateX(-30%);
}


img:nth-child(3){
    transform: translateX(-60%) translateY(80%);
}

</style>