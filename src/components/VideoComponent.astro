---
import Video from './Elements/Video.astro';
import H6 from './Elements/H6.astro';
import H2 from './Elements/H2.astro';
import TextParagraph from './Elements/TextParagraph.astro';
import ItemsList from './Elements/ItemsList.astro';

interface Props {
    reverse?: boolean
}

const { reverse } = Astro.props

---

<div class={`video-container ${reverse && 'reverse-flex'}`}>
    <!-- Video Container -->
    <Video srcPath="https://www.youtube.com/embed/NpEaa2P7qZI" />
    <div>
        <H6>Trust Us Now</H6>
        <H2>WHY CHOICE OUR HOME DESIGN INTERIOR SERVICES</H2>
        <TextParagraph>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis, pulvinar dapibus leo.</TextParagraph>
        <ItemsList items={["Flexible Time", "Perfect Work", "Client Priority", "Flexible Time","Perfect Work","Client Priority"]} />
    </div>
</div>

<style>

    .reverse-flex{
        flex-direction: row-reverse;
    }

    .video-container{
        display: flex;
        justify-content: space-between;
        gap: 2rem;
        margin-block: 2rem;
        align-items: center;
    }

    .video-container > div{
        width: 50%;
    }
</style>