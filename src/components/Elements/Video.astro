---
interface Props {
    srcPath: string
}

const { srcPath } = Astro.props
---

<div>
    <iframe src={srcPath} title="video placeholder" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>

<style>

div{
    flex-basis: 600px;
    flex-grow: 9999;
    max-width: 100%;
    padding: 2rem;
}

iframe{
    width: 100%;
    height: 100%;
    aspect-ratio: 16 / 9;    
}

</style>