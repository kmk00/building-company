---
interface Props {
    label: string;
    textColor?: string;
    backgroundColor?: string; 
}

const { label, textColor, backgroundColor } = Astro.props;
---

<button style={`color: ${textColor}; background-color: ${backgroundColor}`}>{label}</button>


<style>
    button{
        border: none;
        padding: 1.4rem 2.4rem;
        font-size: 1.4rem;
        font-weight: bold;
        text-transform: uppercase;
        margin-block: 1rem;
    }

    button:hover{
        cursor: pointer;
        scale: 1.02;
        transition: all 0.1s ease;

    }

</style>